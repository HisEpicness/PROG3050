@model IEnumerable<CVGS.Areas.MVC.Models.Event>

@{
    ViewData["Title"] = "Delete an Event";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this event?</h3>
<div>

    <dl class="dl-horizontal">
        <dt>
            Event Number
        </dt>
        <dd>
            @Html.DisplayFor(item => item.eventId)
        </dd>
        <dt>
            Event Name
        </dt>
        <dd>
            @Html.DisplayFor(item => item.name)
        </dd>
        <dt>
            Date of Event
        </dt>
        <dd>
            @Html.DisplayFor(item => item.date)
        </dd>
        <dt>
            Description
        </dt>
        <dd>
            @Html.DisplayFor(item => item.description)
        </dd>
        <dt>
            Events' Creator
        </dt>
        <dd>
            @Html.DisplayFor(item => item.createdBy)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="eventId" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Cancel</a>
    </form>
</div>

