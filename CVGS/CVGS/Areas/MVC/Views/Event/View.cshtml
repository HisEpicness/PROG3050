@model IEnumerable<CVGS.Areas.MVC.Models.Event>

@{
    ViewData["Title"] = "Viewing an Event";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            Event Number
        </dt>
        <dd>
            @Html.DisplayFor(item => item.eventId)
        </dd>
        <dt>
            Event Name
        </dt>
        <dd>
            @Html.DisplayFor(item => item.name)
        </dd>
        <dt>
            Date of Event
        </dt>
        <dd>
            @Html.DisplayFor(item => item.date)
        </dd>
        <dt>
            Description
        </dt>
        <dd>
            @Html.DisplayFor(item => item.description)
        </dd>
        <dt>
            Events' Creator
        </dt>
        <dd>
            @Html.DisplayFor(item => item.createdBy)
        </dd>
    </dl>

    <a asp-action="View" asp-route-id="@item.eventId">View</a> |
    <a asp-action="Edit" asp-route-id="@item.eventId">Edit</a> |
    <a asp-action="Delete" asp-route-id="@item.eventId">Delete</a>

</div>

